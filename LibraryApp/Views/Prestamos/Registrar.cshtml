@model LibraryApp.Models.Prestamo
@{
    ViewData["Title"] = "Registrar Préstamo";
}

<h2>@ViewData["Title"]</h2>
<hr/>
<form asp-action="Registrar" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Libro</label>
        <select asp-for="LibroId" asp-items="ViewBag.Libros" class="form-control"></select>
        <span asp-validation-for="LibroId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Estudiante"></label>
        <input asp-for="Estudiante" class="form-control" />
        <span asp-validation-for="Estudiante" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Fecha de entrega</label>
        <input asp-for="FechaDevolucion" class="form-control" type="date" />
        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary mt-3">Registrar</button>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}